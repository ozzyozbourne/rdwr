<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Reader and Writer Test Suite" thread-count="150" parallel="tests">

    <test name="Reader Test" thread-count="20" parallel="methods">
        <classes>
            <class name="io.github.ozzyozbourne.tests.ReaderTests"/>
        </classes>
    </test>

    <test name="Writer Test" thread-count="20" parallel="methods">
        <classes>
            <class name="io.github.ozzyozbourne.tests.WriterTests"/>
        </classes>
    </test>

    <test name="Yaml Threaded Test" thread-count="100" parallel="methods">
        <classes>
            <class name="io.github.ozzyozbourne.tests.threaded.YamlRWTest"/>
        </classes>
    </test>

    <test name="Toml Threaded Test" thread-count="100" parallel="methods">
        <classes>
            <class name="io.github.ozzyozbourne.tests.threaded.TomlRWTest"/>
        </classes>
    </test>


</suite>